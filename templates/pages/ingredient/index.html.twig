{% extends 'base.html.twig' %}

{% block title %}CookAssistant - Mes ingrédients{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not ingredients.items is same as([]) %}
            <img src="/images/cooking.png" class="bi mt-4 mb-3" width="100" height="100" alt="" srcset="">
            <h1>Mes ingrédients</h1>

            <div class="count mt-4">
                Il y a {{ ingredients.getTotalItemCount }} ingrédients
            </div>

        <table class="table table-hover mt-4">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prix</th>
                <th scope="col">Date d'ajout</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ingredient in ingredients %}
                <tr class="table-primary">
                    <td>{{ ingredient.name }}</td>
                    <td>{{ ingredient.price }}€</td>
                    <td>{{ ingredient.createdAt|date('d/m/Y') }}</td>
                    <td>
                        <button type="button" class="btn btn-outline-secondary">Modifier</button>
                        <button type="button" class="btn btn-outline-danger">Supprimer</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        </table>

        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(ingredients) }}
        </div>
    {% else %}
        <h4>Il n'y a pas d'ingrédients...</h4>
    {% endif %}
    </div>
{% endblock %}